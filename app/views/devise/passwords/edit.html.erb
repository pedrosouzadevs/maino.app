<div class=" container px-4 mt-5 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <div class="my-4"></div>
        <h2 class="my-5 text-center"><%=t'Change_your_password'%></h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password,
                      label: (t"New_password"),
                      required: true,
                      autofocus: true,
                      hint: (t'password_hint'),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: (t"Confirm_your_new_password"),
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions d-flex justify-content-center mt-5">
          <%= f.button :submit, (t"Change_my_password"), class:"btn btn-primary rounded text-uppercase my-1 center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
