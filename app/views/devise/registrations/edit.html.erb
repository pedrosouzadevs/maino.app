<div class=" container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <h2 class="text-center my-4"><%= t'Edit_user'%></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :name,
                      input_html: { value: current_user.name },
                      label: (t"Name"),
                      autofocus: true %>
          <%= f.input :password,
                      hint: (t'Blank_edit_user_hint'),
                      required: false,
                      label: (t"New_password"),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      label: (t"Confirm_your_new_password"),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: (t'Hint_password_edit'),
                      required: true,
                      label: (t"Current_password"),
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, (t"Update"), class:"btn btn-primary rounded text-uppercase my-1 center" %>
        </div>
      <% end %>


      <div class="d-flex justify-content-center">
        <%= button_to (t'Cancel_account'), registration_path(resource_name), data: { confirm: (t'Are_you_sure?'), turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger rounded text-uppercase my-1 center" %>
      </div>

      <div class="d-flex justify-content-center">
        <%= link_to (t'Back'), :back, class:"btn btn-primary rounded text-uppercase my-1 center" %>
      </div>
    </div>
  </div>
</div>
